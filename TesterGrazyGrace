    <!-- Success Message -->
    <div class="success-message" id="successMessage">
        ‚úÖ Order confirmed! We'll be in touch shortly.
    </div>

    <script>
        // Cart functionality
        let cart = [];
        let cartTotal = 0;
        let deliveryFee = 0;

        function addToCart(item, price) {
            cart.push({ item, price });
            cartTotal += price;
            updateCartCount();
            
            // Show success animation
            const btn = event.target;
            const originalText = btn.innerHTML;
            btn.innerHTML = '‚úì Added!';
            btn.style.background = '#2ecc71';
            
            setTimeout(() => {
                btn.innerHTML = originalText;
                btn.style.background = '';
            }, 1500);
            
            showSuccessMessage(`${item} added to your order!`);
        }

        function updateCartCount() {
            document.getElementById('cartCount').textContent = cart.length;
            document.getElementById('cartCount').style.animation = 'bounce 0.5s';
            setTimeout(() => {
                document.getElementById('cartCount').style.animation = '';
            }, 500);
        }

        function showCart() {
            if (cart.length === 0) {
                showSuccessMessage('Your basket is empty!');
                return;
            }
            let cartList = cart.map((item, index) => 
                `${index + 1}. ${item.item} - ¬£${item.price}`
            ).join('\n');
            let totalWithDelivery = cartTotal + deliveryFee;
            alert(`Your Order:\n\n${cartList}\n\nDelivery: ¬£${deliveryFee}\nTotal: ¬£${totalWithDelivery}\n\nProceed to booking to complete your order!`);
        }

        function showSuccessMessage(msg) {
            const successDiv = document.getElementById('successMessage');
            successDiv.textContent = msg;
            successDiv.style.display = 'block';
            setTimeout(() => {
                successDiv.style.display = 'none';
            }, 3000);
        }

        // Custom board builder
        function updateTotal() {
            const checkboxes = document.querySelectorAll('.builder-option input[type="checkbox"]:checked');
            let total = 0;
            checkboxes.forEach(box => {
                total += parseInt(box.value);
            });
            // Base price includes board and presentation
            total = total > 0 ? total + 15 : 0;
            document.getElementById('customTotal').textContent = '¬£' + total;
            return total;
        }

        function addCustomToCart() {
            const total = updateTotal();
            if (total === 0) {
                showSuccessMessage('Please select some items first!');
                return;
            }
            addToCart('Custom Build Your Own Board', total);
        }

        function updateDelivery() {
            const delivery = document.getElementById('delivery').value;
            deliveryFee = delivery === 'cardiff' ? 5 : 0;
        }

        // Booking form
        document.getElementById('bookingForm').addEventListener('submit', function(e) {
            e.preventDefault();
            document.getElementById('paymentModal').classList.add('active');
        });

        function closeModal() {
            document.getElementById('paymentModal').classList.remove('active');
            document.getElementById('cardDetails').style.display = 'none';
            document.querySelectorAll('.payment-method').forEach(m => m.classList.remove('selected'));
        }

        function selectPayment(element) {
            document.querySelectorAll('.payment-method').forEach(m => m.classList.remove('selected'));
            element.classList.add('selected');
            
            if (element.textContent.includes('Card')) {
                document.getElementById('cardDetails').style.display = 'block';
            } else {
                document.getElementById('cardDetails').style.display = 'none';
            }
        }

        function processPayment() {
            const loader = document.getElementById('paymentLoader');
            loader.style.display = 'block';
            
            setTimeout(() => {
                loader.style.display = 'none';
                closeModal();
                showSuccessMessage('üéâ Payment successful! Check your email for confirmation.');
                cart = [];
                cartTotal = 0;
                deliveryFee = 0;
                updateCartCount();
                document.getElementById('bookingForm').reset();
                document.querySelectorAll('.builder-option input').forEach(box => box.checked = false);
                updateTotal();
            }, 2000);
        }

        // Animated counters
        function animateCounter(id, target, duration) {
            let current = 0;
            const increment = target / (duration / 16);
            const element = document.getElementById(id);
            
            const timer = setInterval(() => {
                current += increment;
                if (current >= target) {
                    current = target;
                    clearInterval(timer);
                }
                element.textContent = Math.floor(current);
            }, 16);
        }

        // Intersection Observer for animations
        const observerOptions = {
            threshold: 0.5
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    if (entry.target.classList.contains('about-section')) {
                        animateCounter('stat1', 1500, 2000);
                        animateCounter('stat2', 1200, 2000);
                        animateCounter('stat3', 350, 2000);
                    }
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        // Observe elements
        document.querySelectorAll('.menu-card, .about-section, .builder-container').forEach(el => {
            el.style.opacity = '0';
            el.style.transform = 'translateY(30px)';
            el.style.transition = 'opacity 0.6s, transform 0.6s';
            observer.observe(el);
        });

        // Navbar scroll effect
        window.addEventListener('scroll', () => {
            const navbar = document.getElementById('navbar');
            if (window.scrollY > 50) {
                navbar.style.padding = '0.3rem 5%';
                navbar.style.boxShadow = '0 2px 30px rgba(128, 0, 32, 0.15)';
            } else {
                navbar.style.padding = '0.5rem 5%';
                navbar.style.boxShadow = '0 2px 20px rgba(128, 0, 32, 0.1)';
            }
        });

        // Set minimum date to today
        document.getElementById('date').min = new Date().toISOString().split('T')[0];

        // Postcode formatting
        document.getElementById('postcode').addEventListener('input', function(e) {
            e.target.value = e.target.value.toUpperCase();
        });
    </script>
</body>
</html>
